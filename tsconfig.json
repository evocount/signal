{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es3",
		"lib": [ "es5" ],
		"moduleResolution": "node",
		"outDir": "build",
		"declarationDir": "build",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts"
	]
}
